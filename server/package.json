{
  "name": "@mern-monorepo/server",
  "version": "1.0.0",
  "description": "Node and Express server API",
  "main": "index.js",
  "author": "Francis Lagares",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn prisma:generate && yarn prisma:seed cross-env NODE_ENV=development && nodemon",
    "start": "yarn build && NODE_ENV=production && node dist/server.js",
    "build": "tsc && tsc-alias",
    "deploy:clean": "pm2 stop all && pm2 delete all",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev && pm2 logs all",
    "deploy:prod": "yarn build && pm2 start ecosystem.config.js --only prod",
    "prisma:init": "prisma init",
    "prisma:push": "dotenv -e .env.development.local -- npx prisma db push",
    "prisma:migrate": "dotenv -e .env.development.local -- npx prisma migrate dev --name init ",
    "prisma:seed": "dotenv -e .env.development.local -- npx prisma db seed",
    "prisma:generate": "prisma generate",
    "test": "dotenv -e .env.development.test -- npx vitest"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node --transpile-only src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.14.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "prisma": "^4.14.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "dotenv-cli": "^7.2.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "tinyspy": "^2.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
